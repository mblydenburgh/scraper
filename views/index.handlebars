<main>
    <h1>The Beer Scraper</h1>
    <h3>Scraping The Beer Advocate</h3>
    <hr></hr>
    <section>
        {{#each beer}}
            <div class="item">
                <h4>{{beer_name}}</h4>
                <h6>By:{{brewery_name}}</h6>
                <p>Style: {{beer_style}}</p>
                <p>Score: {{score}} / 5</p>
                <p>Review:{{review_body}}</p>
            </div>
            <hr></hr>
        {{/each}}
    </section>
    
</main>